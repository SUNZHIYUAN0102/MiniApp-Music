/* pages/recommendSong/recommendSong.wxss */
@import "/songPackage/static/iconfont/inconfont.wxss";

.recommendSongContainer .header {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}

.recommendSongContainer .header .date{
    width: 300rpx;
    height: 100rpx;
    color: white;
    text-align: center;
    line-height: 100rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.recommendSongContainer .header .date .day{
    font-size: 38rpx;
}

.ListContainer {
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: white;
    position: relative;
    top: -20rpx;
}

.ListContainer .listHeader{
    height: 80rpx;
    line-height: 80rpx;
}

.ListContainer .listHeader .changeMore{
    float: right;
}

.listScroll{
    height: calc(100vh - 380rpx);
}

.listScroll .scrollItem{
    display: flex;
    align-items: center;
    position: relative;
    margin-bottom: 20rpx;
}

.listScroll .scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}

.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    max-width: 500rpx;
}

.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}