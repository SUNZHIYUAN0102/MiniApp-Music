/* pages/index/index.wxss */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

.navContainer {
    display: flex;
    justify-content: space-between;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background-color: rgb(240, 19, 19);
    color: white;
    font-size: 50rpx;
    margin: 20rpx 0;
}

.navItem text:last-child {
    font-size: 26rpx;
}

.recommendContainer {
    padding: 20rpx;
}

.recommendScroll{
    display: flex;
    justify-content: space-between;
    margin: 20rpx 0;
    height: 300rpx;
}

.scrollItem{
    width: 200rpx;
    margin-right:20rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 26rpx;
    text-overflow: ellipsis;
}

.topList{
    padding: 20rpx;
}

.topListSwiper{
    height: 400rpx;
}

.swiper-item{
    width: 96%;
    background-color: #fbfbfb;
}

.swiper-item .title{
    font-size: 30rpx;
    line-height: 30rpx;
    margin: 20rpx 0;
}

.musicItem{
    display: flex;
    margin-bottom: 20rpx;
}

.musicItem image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
}

.musicItem .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.musicItem .musicName{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}